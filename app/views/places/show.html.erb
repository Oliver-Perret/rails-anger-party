<div class="container">

  <div class="place_banner">
    </br>
    </br>
    <%= link_to "Back to the list", places_path, class: "btn-basic btn-purple btn-hover"  %>
    </br>
    </br>
    <h1><span style="font-size: 20px; color: #262626">Villa</span></br>

    <%= @place.title %></h1>

    <div class="place_hero" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path @place.photo, height: 300, width: 400, crop: :fill %>');">
    </div>
  </div>


<div class="show-content">

  <div class="details">

      <ul class="grid-container">
        <li class="grid-item"><p><span style="font-weight: bold"> Address: </span> <%= @place.address %></p></li>
        <li class="grid-item"><p><span style="font-weight: bold"> Description: </span><%= @place.description %></p></li>
        <li class="grid-item"><p><span style="font-weight: bold"> Price: </span><%= @place.price %>â‚¬ /Hour</p></li>
        <li class="grid-item"><p><span style="font-weight: bold"> Equipment: </span><%= @place.equipment %></p></li>
        <li class="grid-item"><p><span style="font-weight: bold"> Destroy pack: </span><%= @place.destroy_pack %></p></li>
        <li class="grid-item"><p><span style="font-weight: bold"> Sleepings: </span><%= @place.sleepings %></p></li>
        <li class="grid-item"><p><span style="font-weight: bold"> Tools: </span><%= @place.tools %></p></li>
        <li class="grid-item"><p><span style="font-weight: bold"> Owner: </span><%= @place.owner.user_name %></p></li>
      </ul>

      <%= link_to "Edit this place", edit_place_path(@place.id), :class => "btn-basic btn-purple btn-hover"%></br></br>


  </div>


  <%# form BOOKING  %>
  <div id="booking-form">
    <h2 class="text-center"> Book this place</h2>
    <%= simple_form_for [@place, @booking] do |f| %>

      <%= f.input :start_date, as: :string, required: false, input_html: {id: "range_start"} %>
      <%= f.input :end_date, as: :string, required: false, input_html: {id: "range_end"}  %>

      <%= f.submit "Confirm booking", class: "btn-basic btn-green btn-hover" %>
    <% end %>

  </div>

</div>

<% unless @place.address.blank? %>
  <%= image_tag "https://maps.googleapis.com/maps/api/staticmap?zoom=15&size=400x300&sensor=false&maptype=roadmap&markers=color:purple|#{@place.address}", id:"show_map" %>
<% end %>
</div>

