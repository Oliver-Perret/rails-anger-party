 <div class="content">

  <div class="cards-container">

    <div class="list-intro">
      <div id="title">
        <h1>Our places to destroy</h1>
        <div id="your-search">
        <% if params[:query].present?%>
          <p>Your search : <span style="font-weight: bold">"<%=@query%>" </span></p>
          <%= link_to "Clean your search", places_path, html_options = {:class=>"btn-ghost"} %>
        <% end %>
        </div>
      </div>
      <% if policy(Place).create? %>
        <%= link_to "+ Add a new place", new_place_path, html_options = {:class=>"btn-basic btn-purple btn-hover", :id=>"add-btn"} %>
      <% end %>
    </div>

    <div class="row">

      <% @places.each do |place| %>

      <div class="col-xs-12 col-sm-6 col-lg-4">

        <div class="card" style="background-image: url('<%= cl_image_path place.photo, height: 300, width: 400, crop: :fill %>')">
          <div class="card-category"><%= place.category %></div>
          <div class="card-description">
            <h2><%= place.title %></h2>
            <p><%= place.price %>â‚¬ - Pack <span style="font-weight:bold"><%= place.destroy_pack %></span></p>
          </div>
          <img class="card-user" src="https://kitt.lewagon.com/placeholder/users/tgenaitay">
          <a class="card-link" href="<%= place_path(place) %>" ></a>
        </div>

      </div>

    <% end %>

    </div>

  </div>

  <div id="map">
  </div>

</div>

    <!-- Gmaps js: building the map -->
    <script>
      function initMap() {
        // Create a map object and specify the DOM element for display.
        var map = new google.maps.Map(document.getElementById('map'), {
          center: {lat: 52.5206, lng: 13.4098},
          scrollwheel: false,
          zoom: 8
        });
      }
    </script>
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <!-- Latest compiled and minified JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <!-- Gmaps JavaScript -->
    <script async defer
      src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCzER7O10ZOUp7FloJzMe2r8X1GIQhgt7Q&callback=initMap">
    </script>
