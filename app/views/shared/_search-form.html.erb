<div id="search-bar">
  <%= form_tag places_path, method: :get, :class => 'form-inline' do %>
    <div class="form-group">
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Ex : Paris, manor, big house ..."
    %>
    </div>
    <button type="submit" class="btn-basic btn-icon btn-pink btn-hover">
      <i class="fas fa-search"></i>
    </button>
  <% end %>
</div>
