<html>

<head>
  <meta charset="utf-8">
  <title>AngerParty at home</title>
</head>

<body>
  <%= render 'shared/banner' %>
  <div class="main-container">

    <div class="container">
      <h2 class="text-center">Popular Places</h2>
    </div>

    <div class="row">
      <% top_places = Place.last(3) %>
      <% top_places.each do |place| %>
        <div class="col-xs-12 col-sm-6 col-lg-4">
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path place.photo, height: 300, width: 400, crop: :fill %>');">
            <div class="card-category">Villa</div>
            <div class="card-description">
              <h2><%= place.title %></h2>
              <p><%= place.price %>â‚¬ - Pack <span style="font-weight:bold"><%= place.destroy_pack %></span></p>
            </div>
            <img class="card-user" src="https://kitt.lewagon.com/placeholder/users/tgenaitay">
            <a class="card-link" href="<%= place_path(place) %>" ></a>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</body>
</html>

